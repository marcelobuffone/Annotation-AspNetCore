@model IEnumerable<MBAM.Annotations.Application.ViewModels.AnnotationViewModel>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a type="button" class="btn btn-outline-primary" asp-action="Create">New Annotation</a>
</p>

<div class="table-responsive text-nowrap">

    <table class="table">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Last Update
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastUpdate)
                    </td>
                    <td>
                        <a type="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a type="button" class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a type="button" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>



