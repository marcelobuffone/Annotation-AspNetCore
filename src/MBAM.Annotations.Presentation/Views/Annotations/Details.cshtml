@model MBAM.Annotations.Application.ViewModels.AnnotationViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    @foreach (var item in Model.AnnotationHistory.OrderByDescending(e => e.CreateDate))
    {
        <dl class="row">
            <dt class="col-sm-2">
                Title
            </dt>
            <dd class="col-sm-10">
                @item.Title
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @item.Description
            </dd>
            <dt class="col-sm-2">
                Date
            </dt>
            <dd class="col-sm-10">
                @item.CreateDate.ToString("dd/MM/yyyy HH:mm")
            </dd>

        </dl>
        <hr />

    }


</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
